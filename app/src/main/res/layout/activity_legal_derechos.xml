<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Legal">

    <TextView
        android:id="@+id/textTituloDerechos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/legal_derechos"
        android:layout_marginTop="-200dp"
        />

    <TextView
        android:id="@+id/textTituloDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Recicleytor. Es propiedad de la empresa Software Solitions.
        Esta protejida bajo derechos de autor."
        android:layout_gravity="left"
        />

</LinearLayout>