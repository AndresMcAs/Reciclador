<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.informacion.InformacionResiduo">



    <TextView
        android:id="@+id/nombreResiduo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Residuo: "
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="135dp"
       />

    <TextView
        android:id="@+id/tipoResiduo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Tipo: "
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/iResiduo"
        tools:layout_editor_absoluteX="38dp" />

    <TextView
        android:id="@+id/contenedorAsignado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:textStyle="italic"
        android:text="Contenedor Correspondiente: "
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/iTipo"
        tools:layout_editor_absoluteX="38dp" />

    <TextView
        android:id="@+id/esReciclable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Reciclable: "
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/iContenedorCorrespondiente"
        tools:layout_editor_absoluteX="38dp" />

    <TextView
        android:id="@+id/acercaResiduo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:textStyle="italic"
        android:text="Acerca del residuo: "
        android:textColor="@color/black"
        android:textSize="22dp"
        app:layout_constraintTop_toBottomOf="@+id/iReciclable"
        tools:layout_editor_absoluteX="47dp" />

    <SearchView
        android:layout_width="289dp"
        android:layout_height="28dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/iAcercaResiduo"
        tools:layout_editor_absoluteX="49dp" />

    <ImageView
        android:id="@+id/residuoIdentificadoImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        app:layout_constraintStart_toEndOf="@+id/nombreResiduo"
        tools:layout_editor_absoluteY="102dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/iResiduo"
        android:layout_width="208dp"
        android:layout_height="58dp"
        android:layout_marginTop="8dp"
        android:text=" "
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nombreResiduo"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/iTipo"
        android:layout_width="201dp"
        android:layout_height="49dp"
        android:layout_marginTop="12dp"
        android:text=" "
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tipoResiduo"
        tools:layout_editor_absoluteX="53dp" />

    <TextView
        android:id="@+id/iContenedorCorrespondiente"
        android:layout_width="205dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:text=" "
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/contenedorAsignado"
        tools:layout_editor_absoluteX="53dp" />

    <TextView
        android:id="@+id/iReciclable"
        android:layout_width="205dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:text=" "
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/esReciclable"
        tools:layout_editor_absoluteX="56dp" />

    <TextView
        android:id="@+id/iAcercaResiduo"
        android:layout_width="314dp"
        android:layout_height="54dp"
        android:layout_marginTop="44dp"
        android:text=" "
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/acercaResiduo"
        tools:layout_editor_absoluteX="47dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>